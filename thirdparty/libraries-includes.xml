<?xml version="1.0" encoding="utf-8"?>
<xml>
	<section>
		<!-- Includes -->
		<compilerflag value="-I${SDL_DIRECTORY}/include" />
		<compilerflag value="-I${SDL_IMAGE_DIRECTORY}/include" />
		<compilerflag value="-I${SDL_TTF_DIRECTORY}/include" />

		<compilerflag value="-I${GLAD_DIRECTORY}/include" />

		<compilerflag value="-I${DR_LIBS_DIRECTORY}" />

		<compilerflag value="-I${SOFT_OAL_DIRECTORY}/include" unless="emscripten" />
	</section>

	<section>
		<!-- Defines -->
		<compilerflag value="-DSDL_MAIN_HANDLED" />

		<compilerflag value="-DGLAD_API_CALL_EXPORT" />

		<section unless="emscripten">
			<compilerflag value="-DDRMP3_DLL" />
			<compilerflag value="-DDRWAV_DLL" />
			<compilerflag value="-DDRFLAC_DLL" />

			<compilerflag value="-DAL_ALEXT_PROTOTYPES" />

			<section if="windows">
				<compilerflag value="-DALC_API=__declspec(dllimport)" />
				<compilerflag value="-DAL_API=__declspec(dllimport)" />
			</section>
		</section>
	</section>
</xml>