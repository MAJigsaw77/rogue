<?xml version="1.0" encoding="utf-8"?>
<xml>
	<files id="sdl_image-files" dir="${SDL_IMAGE_DIRECTORY}">
		<!-- sdl overrideable include -->
		<compilerflag value="-I${SDL_OVERRIDE_DIRECTORY}/include" />
		<compilerflag value="-I${SDL_OVERRIDE_DIRECTORY}/include/build_config" />

		<!-- sdl include -->
		<compilerflag value="-I${SDL_DIRECTORY}/include" />
		<compilerflag value="-I${SDL_DIRECTORY}/include/build_config" />

		<!-- sdl_image overrideable -->
		<compilerflag value="-I${SDL_IMAGE_OVERRIDE_DIRECTORY}/include" />

		<!-- sdl_image include -->
		<compilerflag value="-I${SDL_IMAGE_DIRECTORY}/include" />

		<section>
			<!-- sdl_image defines -->
			<compilerflag value="-DLOAD_JPG" />
			<compilerflag value="-DSAVE_JPG" />

			<compilerflag value="-DLOAD_PNG" />
			<compilerflag value="-DSAVE_PNG" />

			<compilerflag value="-DLOAD_GIF" />
			<compilerflag value="-DSAVE_GIF" />

			<compilerflag value="-DLOAD_BMP" />
			<compilerflag value="-DSAVE_BMP" />

			<compilerflag value="-DLOAD_WEBP" />
			<compilerflag value="-DSAVE_WEBP" />

			<compilerflag value="-DLOAD_SVG" />
			<compilerflag value="-DSAVE_SVG" />

			<compilerflag value="-DLOAD_AVIF" />
			<compilerflag value="-DSAVE_AVIF" />

			<compilerflag value="-DLOAD_TIF" />
			<compilerflag value="-DSAVE_TIF" />
		</section>

		<section>
			<!-- sdl_image include src -->
			<compilerflag value="-I${SDL_IMAGE_DIRECTORY}/src" />

			<file name="src/IMG.c" />
			<file name="src/IMG_ani.c" />
			<file name="src/IMG_anim_decoder.c" />
			<file name="src/IMG_anim_encoder.c" />
			<file name="src/IMG_avif.c" />
			<file name="src/IMG_bmp.c" />
			<file name="src/IMG_gif.c" />
			<file name="src/IMG_ImageIO.m" if="apple" />
			<file name="src/IMG_jpg.c" />
			<file name="src/IMG_jxl.c" />
			<file name="src/IMG_lbm.c" />
			<file name="src/IMG_libpng.c" />
			<file name="src/IMG_pcx.c" />
			<file name="src/IMG_png.c" />
			<file name="src/IMG_pnm.c" />
			<file name="src/IMG_qoi.c" />
			<file name="src/IMG_stb.c" />
			<file name="src/IMG_svg.c" />
			<file name="src/IMG_tga.c" />
			<file name="src/IMG_tif.c" />
			<file name="src/IMG_webp.c" />
			<file name="src/IMG_WIC.c" />
			<file name="src/IMG_xcf.c" />
			<file name="src/IMG_xpm.c" />
			<file name="src/IMG_xv.c" />
			<file name="src/IMG_xxx.c" />
			<file name="src/xmlman.c" />
		</section>
	</files>
</xml>
