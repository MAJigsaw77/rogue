<?xml version="1.0" encoding="utf-8"?>
<xml>
	<files id="glad-files" dir="${GLAD_DIRECTORY}" tags="optim-std">
		<!-- glad include -->
		<compilerflag value="-I${GLAD_DIRECTORY}/include" />

		<!-- glad defines -->
		<section unless="static_link">
			<compilerflag value="-DGLAD_API_CALL_EXPORT" />
			<compilerflag value="-DGLAD_API_CALL_EXPORT_BUILD" />
		</section>

		<!-- glad src -->
		<file name="src/gl.c" if="windows || macos || linux" />
		<file name="src/gles2.c" if="android || rpi || emscripten || iphone" />
		<file name="src/egl.c" if="android || rpi" />
	</files>
</xml>
